<style>
  .site-footer {
    background: linear-gradient(135deg, #5a0d14 0%, #8B1420 50%, #5a0d14 100%);
    color: white;
    padding: 3rem 2rem 1.5rem;
    margin-top: auto;
    width: 100%;
  }

  :global(.dark) .site-footer {
    background: linear-gradient(135deg, #0f3832 0%, #1e5a4f 50%, #0f3832 100%);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    font-family: 'Jura', sans-serif;
    color: white;
  }

  .footer-section h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    font-family: 'Jura', sans-serif;
    color: rgba(255, 255, 255, 0.95);
  }

  .footer-section p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: white;
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 1.5rem;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-bottom p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0.25rem 0;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 2rem 1.5rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-section h3 {
      font-size: 1.3rem;
    }

    .footer-section h4 {
      font-size: 1rem;
    }

    .footer-bottom {
      padding-top: 1rem;
    }
  }
</style>
